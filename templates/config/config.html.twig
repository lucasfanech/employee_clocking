{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-sm">
        <div class="row">
            <h3>Configuration</h3>
        </div>
        <div class="row">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <form action="{{ path('config_save') }}" method="POST">
            <div class="row">

                <div class="col">
                    <h5>Lunch break Time (HH:mm)</h5>
                    <input id="lunchBreakTime" name="lunchBreakTime" class="form-control" type="time" value="{{ lunchBreakTime|date('H:i')}}">

                    <h5>Hours to do in week (HH:mm)</h5>
                    <input id="h_hoursToDoInWeek" name="h_hoursToDoInWeek" type="number" min="0" max="60" value="{{ hoursToDoInWeek|slice(0, 2) }}" />
                    <input id="m_hoursToDoInWeek" name="m_hoursToDoInWeek" type="number" min="0" max="59" value="{{ hoursToDoInWeek|slice(3, 2) }}" />

                </div>
                <div class="col">

                    <h5>Exception lunch break</h5>
                    <span>Time (HH:mm): </span>
                    <input id="exceptionTime" name="exceptionTime" class="form-control" type="time" value="{{ exceptionTime|date('H:i') }}">
                    <span>Days: </span>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="mon" name="mon" {{ mon }}>
                        <label class="form-check-label" for="mon">
                            Monday
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="tue" name="tue" {{ tue }}>
                        <label class="form-check-label" for="tue">
                            Tuesday
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="wed" name="wed" {{ wed }}>
                        <label class="form-check-label" for="wed">
                            Wednesday
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="thu" name="thu" {{ thu }}>
                        <label class="form-check-label" for="thu">
                            Thursday
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="fri" name="fri" {{ fri }}>
                        <label class="form-check-label" for="fri">
                            Friday
                        </label>
                    </div>
                </div>

            </div>
            <div class="row text-center">
                <button id="save" name="save" type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>

    </div>

{% endblock %}